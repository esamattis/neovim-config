#!/bin/bash

DISABLE_FLAG=~/.vim/bundle/command-t/disable

[ -f $DISABLE_FLAG ] && rm $DISABLE_FLAG

cd ~/.vim/bundle/command-t/ruby/command-t
/usr/bin/ruby 'extconf.rb'
# ruby 'extconf.rb'
make clean
make 

# Test if vim is broken
vim -c "q"

if [ ! $? -eq 0 ]
then
    echo
    echo "Command-T is broken!!!"
    echo
    touch $DISABLE_FLAG
fi

exit 0

